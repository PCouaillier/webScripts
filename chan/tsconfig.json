{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es6",
            "dom",
            "es2016.array.include"
        ],
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true
    },
    "exclude": [
        "dist",
        ".tmp",
        "node_modules"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
